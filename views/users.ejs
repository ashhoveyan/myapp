<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <title>Users</title>
</head>
<body>
<h1>Users List</h1>
<% if (typeof message !=='undefined' ) { %>
    <div class="alert alert-danger">
        <%= message %>
    </div>
<% } %>
<% if (users.length> 0) { %>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Last name</th>
            <th>Email</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(user=> { %>
            <tr>
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.first_name %>
                </td>
                <td>
                    <%= user.last_name %>
                </td>
                <td>
                    <%= user.email %>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <a class="back_task" href="/"> &#9756; Home</a><br>
<% } else { %>
    <p>No users found.</p>
<% } %>

</body>
</html>